<section id="customers" class="container content-section text-center">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <br/><br/>
      <h1><%= t 'customers.header' %></h1>
      <br/>
    </div>
  </div>
  <div class="row customers-body">
    <% t('customers.list').each do |customer| %>
      <div class="col-md-3">
        <a href="<%= customer[:url] %>" class="thumbnail">
          <img src="/images/<%= customer[:img] %>" alt="favbet.com">
        </a>
        <% if customer.key? :what %>
          <blockquote>
            <p>
              <%= customer[:what] %>
            </p>
            <footer><%= customer[:who] %></footer>
          </blockquote>
        <% end %>
      </div>
    <% end %>
  </div>    
  <br/><br/>  
</section>
